// tsconfig.app.json
{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "compilerOptions": {
     "module": "ESNext",
     "lib": ["ESNext", "DOM", "ES2015"],
      "incremental": true,
      "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
      "strict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true
    },
    "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue"]
  }
  